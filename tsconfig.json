{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "dist",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "baseUrl": "server",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["server"],
  "exclude": ["node_modules"]
}
